<query id="checkLogToday" action="select">
    <tables>
        <table name="bfc_attendance_log" />
    </tables>
    <columns>
        <column name="attendance_srl" />
    </columns>
    <conditions>
        <condition operation="equal" column="member_srl" var="member_srl" notnull="notnull" />
        <condition operation="more" column="regdate" var="regdate_more" pipe="and" />
        <condition operation="less" column="regdate" var="regdate_less" pipe="and" />
    </conditions>
</query>