<query id="updateStadium" action="update">
    <tables>
        <table name="bfc_attendance_stadiums" />
    </tables>
    <columns>
        <column name="title" var="title" />
        <column name="lat" var="lat" />
        <column name="lon" var="lon" />
    </columns>
    <conditions>
        <condition operation="equal" column="stadium_srl" var="stadium_srl" notnull="notnull" />
    </conditions>
</query>