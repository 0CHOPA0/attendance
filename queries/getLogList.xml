<query id="getLogList" action="select">
    <tables>
        <table name="bfc_attendance_log" alias="logs" />
        <table name="member" alias="mem" type="left join">
            <conditions>
                <condition operation="equal" column="logs.member_srl" default="mem.member_srl" />
            </conditions>
        </table>
        <table name="bfc_attendance_games" alias="games" type="left join">
            <conditions>
                <condition operation="equal" column="logs.game_srl" default="games.game_srl" />
            </conditions>
        </table>
    </tables>
    <columns>
        <column name="logs.attendance_srl" alias="attendance_srl" />
        <column name="logs.game_srl" alias="game_srl" />
        <column name="logs.member_srl" alias="member_srl" />
        <column name="logs.regdate" alias="regdate" />
        <column name="logs.point_amount" alias="point_amount" />
        <column name="mem.nick_name" alias="nick_name" />
        <column name="mem.user_id" alias="user_id" />
        <column name="games.title" alias="game_title" />
    </columns>
    <navigation>
        <index var="sort_index" default="logs.regdate" order="desc" />
        <list_count var="list_count" default="20" />
        <page var="page" default="1" />
    </navigation>
</query>